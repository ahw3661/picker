<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="item">
	<select id="itemList" resultType="idto">
		SELECT * FROM picker_item WHERE i_category = #{i_category}
			<if test="item_sort == 'price_down'">ORDER BY i_price DESC</if>
			<if test="item_sort == 'price_up'">ORDER BY i_price ASC</if>
			<if test="item_sort == 'item_down'">ORDER BY i_name DESC</if>
			<if test="item_sort == 'item_up'">ORDER BY i_name ASC</if>
	</select>
</mapper>